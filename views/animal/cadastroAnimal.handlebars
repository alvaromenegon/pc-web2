<div class="form cad">
        <form action="/cadastroAnimal" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                        <label>Nome:</label><input type="text" class="form-control" name="nome"
                                placeholder="Nome do Animal">
                </div>
                <div class="mb-3">
                        <label>Nome do Proprietário:</label><input type="text" class="form-control"
                                name="nomeDoProprietario" placeholder="Nome do Proprietário">
                </div>
                <div class="mb-3">
                        <label>Endereço:</label><input type="text" class="form-control" name="endereco"
                                placeholder="Endereço">
                </div>
                <div class="mb-3">
                        <label for="datalistCadTipos" class="form-label">Tipo:</label>
                        <select class="form-control"name="tipo" id="datalistCadTipos">
                                <option selected disabled> -- selecione um --</option>
                                <option>Gato</option>
                                <option>Cachorro</option>
                                <option>Pássaro</option>
                                <option>Réptil</option>
                                <option>Peixe</option>
                                <option>Outro</option>
                        </select>
                </div>
                <div class="mb-3">
                        <label>Raça:</label><input type="text" class="form-control" name="raca" placeholder="Raça">
                </div>
                <div class="mb-3">
                        <label>Foto:</label>
                        <input type="file" class="form-control" name="fotoAnimal">
                </div>

                <hr>
                <center>
                        <button class="btn btn-primary" type="submit">Cadastrar</button>
                </center>
                
        </form>
</div>